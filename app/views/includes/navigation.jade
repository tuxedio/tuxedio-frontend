// Fixed navbar
.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      //- Mobile Menu Icon
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') TuxedioFrontend

    //- Collapsable Navigation
    .navbar-collapse.collapse
      //- CONTROLER: LoginController
      ul.nav.navbar-nav.navbar-right(ng-controller="LoginController")

        //- User is NOT Logged in
        include ./navigation/login.jade
        include ./navigation/signup.jade

        //- User IS Logged in
        include ./navigation/myaccount.jade
