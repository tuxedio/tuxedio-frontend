// Fixed navbar
div(ng-controller="LoginController")
  .navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        //- Mobile Menu Icon
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#')
          | Tuxedio


      //- Collapsable Navigation
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          li.tagline
              a The experience marketplace.
        //- CONTROLER: LoginController
        ul.nav.navbar-nav.navbar-right

          //- User is NOT Logged in
          li.login-button(ng-hide="signedin")
            a(ng-click="open_signup = false; open_login = !open_login") Log in
          li.signup-button(ng-hide="signedin")
            a(ng-click="open_login = false; open_signup = !open_signup")
              button.btn.btn-primary Sign up

          //- User IS Logged in
          include ./navigation/myaccount.jade
  .container
    .dropdown-login.collapsable(ng-class="{opendrop: open_login}")
        include ./navigation/login.jade
    .dropdown-signup.collapsable(ng-class="{opendrop: open_signup}")
        include ./navigation/signup.jade
